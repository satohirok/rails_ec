<body>
  <!-- Header-->
  <% if flash[:notice] %>
    <div class="alert alert-success text-center"><%= notice %></div>
  <% end %>
  <header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
        <h1 class="display-4 fw-bolder">STショップ</h1>
        <p class="lead fw-normal text-white-50 mb-0">最高の商品をあなたへ</p>
      </div>
    </div>
  </header>
  <!-- Section-->
  <section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 d-flex">
        <%= render partial: 'form', locals: { items: @items } %>
      </div>
    </div>
  </section>
</body>
